#!/usr/bin/env node
'use strict';
const Web3 = require('web3');
const EthProbe = require('../index');

const web3 = new Web3();
web3.setProvider(new web3.providers.HttpProvider('http://localhost:8545'));

const ethProbe = new EthProbe(web3);

let addressFromScan = '0xd82b4fcd9fdc38e859208995edb232fbe59422b5';
let printTotal = txs => {
    console.log(txs);
    console.log(`Total: ${txs.length}`);
};

ethProbe.tx.toAddressFast(addressFromScan, {fromOffset: 500}).then(printTotal);

ethProbe.tx.toAddressFullScan(addressFromScan, {fromOffset: 500}).then(printTotal);


//0xd82b4fcd9fdc38e859208995edb232fbe59422b5